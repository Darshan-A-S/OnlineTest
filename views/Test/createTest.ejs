<% layout("/layouts/boilerplate") %>

<body>
    <form method="get" action="/addquestions" novalidate class="needs-validation" enctype="multipart/form-data">


        <h2>Create Test</h2>
        <p class="mt-3">Test Name And Type</p>
        <br>

        <div class="mb-3">
            <label for="title" class="form-label">Test Name </label>
            <input type="text" placeholder="Enter the Test name !! " name="testname" class="form-control" required>
            <div class="valid-feedback"> Name Looks good! </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Skills</label>
            <select id="mySelect" name="mySelect" class="form-control" required>
                <option value="option1">Tech</option>
                <option value="option2">Non-Tech</option>
            </select>
        </div>

        <h4 class="mt-5"> Select The Type Of Test</h4>
        <br>

        <div class="choice col-5">

            <a href="/singlechoice"  class=" subchoice col-4">
                <div class="">
                    <i class="fa-regular fa-circle-check mb-2 ms-5"></i>
                    <p>singlechoice</p>
                </div>
            </a>
            <a href="/Multiplechoice" class="subchoice col-4">
                <div class="">
                    <i class="fa-regular fa-square-check mb-2 ms-5"></i>
                    <p>multiplechoice</p>
                </div>
            </a>
            <a href="/Video" class="subchoice col-4" >
                <div class="">
                    <i class="fa-solid fa-video mb-2 ms-2"></i>
                    <p>video</p>
                </div>
            </a>
            <a href="/Upload" class="subchoice col-4">
                <div class="">
                    <i class="fa-solid fa-arrow-up-from-bracket mb-2 ms-3"></i>
                    <p>upload</p>
                </div>
            </a>
                
        </div>

        <button class="btn btn-dark mt-3" style="padding: 1rem;" >Build a test </button>
        <br>
    </form>
</body>
